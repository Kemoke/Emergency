<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="net.kemoke.emergency.FirstActivity">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WARNING!"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/textRed"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/textRed"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:text="@string/home_sub"
        app:layout_constraintTop_toBottomOf="@+id/main_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/main_btn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/circle"
        app:layout_constraintTop_toBottomOf="@+id/main_sub"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:tint="#fff"
        android:src="@drawable/ic_add_location_black_24dp"
        app:layout_constraintTop_toBottomOf="@+id/main_sub"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/add_new_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_create_new_folder_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_btn"
        app:layout_constraintRight_toLeftOf="@+id/settings_btn"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/settings_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_settings_black_24dp"
        app:layout_constraintLeft_toRightOf="@+id/add_new_btn"
        app:layout_constraintRight_toLeftOf="@+id/help_btn"
        app:layout_constraintTop_toBottomOf="@+id/main_btn"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/help_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_help_outline_black_24dp"
        app:layout_constraintLeft_toRightOf="@+id/settings_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_btn"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
